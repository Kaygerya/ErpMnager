@model ERPManager.Web.Models.Account.ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h4 class="padding-0"><i class="fa fa-key" aria-hidden="true"></i> Şifre İşlemleri</h4>
                <form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal">
                    <div class="form-group row">
                        <label asp-for="OldPassword" class="col-md-3 form-control-label">Mevcut Şifre: </label>
                        <div class="col-md-9">
                            <input asp-for="OldPassword" type="password"class="form-control"autocomplete="off">
                            <span asp-validation-for="OldPassword"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NewPassword"  class="col-md-3 form-control-label">Şifre: </label>
                        <div class="col-md-9">
                            <input asp-for="NewPassword" type="password" class="form-control"autocomplete="off">
                            <span asp-validation-for="NewPassword"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NewPasswordAgain"  class="col-md-3 form-control-label">Tekrar: </label>
                        <div class="col-md-9">
                            <input asp-for="NewPasswordAgain" type="password" class="form-control"autocomplete="off">
                            <span asp-validation-for="NewPasswordAgain"></span>
                        </div>
                    </div>
                   
                 
                    <div class="form-group row">
                        <div class="col-sm-12 text-right">
                            <button  type="submit" class="btn btn-info" value="Save">
                                <i class="fa fa-check" aria-hidden="true"></i>
                                @Localize.GetLocaleString("Save")
                                
                            </button>
                          
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>























